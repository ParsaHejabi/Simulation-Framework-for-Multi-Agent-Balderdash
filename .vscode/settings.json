{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "black-formatter.args": ["--line-length", "110"],
    // Turn on word wrapping for .txt files
    "[plaintext]": {
        "editor.wordWrap": "on"
    },
    "[shellscript]": {
        "editor.formatOnSave": true
    }
}